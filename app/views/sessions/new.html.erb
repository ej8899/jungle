<div class="row">
  <div class="col-sm-6 col-sm-offset-1">
    <div class="users-login">
      <h1>Login</h1>

      <%= form_tag '/login' do %>

        <div class="form-group">
          <%= label_tag :email %>
          <%= text_field_tag :email, "", { class: "form-control" } %>
        </div>

        <div class="form-group">
          <%= label_tag :password %>
          <%= password_field_tag :password, "", { class: "form-control" } %>
        </div>
        <br clear=all>
        <%= submit_tag "Log in", class: 'btn btn-primary' %>

      <% end %>
    </div>
  </div>
</div>
